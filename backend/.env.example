# Database (SQLite for MVP - no installation needed)
DATABASE_URL=sqlite:///./studypilot.db
# For PostgreSQL, use: postgresql://username:password@localhost:5432/studypilot

# LLM API Keys (Use one or more)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here

# ChromaDB
CHROMA_DB_PATH=./chroma_db

# Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Application
APP_NAME=StudyPilot
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# LLM Settings
DEFAULT_LLM=gemini  # Options: gemini, openai, llama
EMBEDDING_MODEL=all-MiniLM-L6-v2
